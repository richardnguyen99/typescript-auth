  "scripts": {
    "clean": "rimraf dist/",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "build:sass": "cross-env NODE_ENV=production webpack --config webpack.web.js && cross-env NODE_ENV=production node scripts/copyStaticAssets.js",
    "build": " yarn clean && yarn build:sass && webpack --config webpack.prod.js",
    "watch:server": "wait-on dist/main.js && node scripts/copyStaticAssets.js && nodemon dist/main.js ",
    "watch:client": "cross-env NODE_ENV=development webpack --watch --config webpack.web.js ",
    "watch:compiler": "wait-on dist/public/ && webpack --watch",
    "watch:sass": "sass --watch src/public/scss/main.scss dist/public/css/main.css",
    "watch:view": "tsc --watch --baseUrl ./src/public/ts --outDir ./dist/public/js",
    "watch:legacy": "concurrently -k -p \"[{name}]\" -n \"Webpack,Server,SCSS,View\" -c \"cyan.bold,green.bold,blue.bold,red.bold\" \"yarn run watch:compiler\" \"yarn run watch:server\" \"yarn run watch:sass\" \"yarn run watch:view\"",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Client,Webpack,Server\" -c \"cyan.bold,green.bold,blue.bold\" \"yarn run watch:client\" \"yarn run watch:compiler\" \"yarn run watch:server\" ",
    "start": "node dist/main.js"
  }
